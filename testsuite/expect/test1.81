# with SLURM; if not, write to the Free Software Foundation, Inc.,
# 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA.
############################################################################
source ./globals

set test_id     "1.81"
set exit_code   0

print_header $test_id

#
# Submit a 1 node job and validate that we don't get more than one 
#
set host_0      ""
set task_cnt    0
set can_not_run 0
set timeout $max_job_delay

if {![test_aix]} {
	set hostname_arg "--short"
	set have_arg 1
} else {
	set hostname_arg ""
	set have_arg 0
}
if {$have_arg == 0} {
	spawn $srun -N1-1 -c 1 -l -t1 $bin_hostname
} else {
	spawn $srun -N1-1 -c 1 -l -t1 $bin_hostname $hostname_arg
} 
expect {
	-re "(Task count specification invalid|configuration is not available)" {
		if { [test_front_end] } {
			set can_not_run 1
			send_user "\nWARNING: error expected, Testing is incompatable with front-end systems\n"
#	
		}
		exp_continue
	}
	-re "($number):" {
		if {$task_cnt == 0} {
			set host_0 $expect_out(1,string)
		}
		incr task_cnt
		exp_continue
	}
	eof {
		wait
	}
}
if {$can_not_run == 1} {
	exit 0
}

if {[string compare $host_0 ""] == 0} {
	send_user "\nFAILURE: Did not get hostname of task 0\n"
	set exit_code   1
}

set alloc_fail 0
set task_cnt2  0
if {$have_arg == 0} {
	spawn $srun -N1-1 -w $host_0 -n [expr $task_cnt + 1] -l -t1 $bin_hostname
} else {
	spawn $srun -N1-1 -w $host_0 -n [expr $task_cnt + 1] -l -t1 $bin_hostname $hostname_arg 
}
expect {
	-re "($number):" {
		incr task_cnt2
		exp_continue
	}
	-re "Unable to allocate resources" {
		send_user "\nThis error is expected, no worries\n"
		set alloc_fail 1
	}
	eof {
		wait
	}
}
if { $alloc_fail == 0 } {
	send_user "\nFAILURE: Did not generate expected error message\n"
	set exit_code   1
}
if { $task_cnt2 != 0 } {
	send_user "\nFAILURE: allocated more tasks than processors\n"
	set exit_code   1
}


#
# Submit a 1 node job
#
set host_0      ""
set host_1      ""
if {$have_arg == 0} {
	spawn $srun -N1-1 -l -t1 $bin_hostname
} else {
	spawn $srun -N1-1 -l -t1 $bin_hostname $hostname_arg  
}
expect {
	-re "($number): ($alpha_numeric)" {
		if {$expect_out(1,string) == 0} {
			set host_0 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 1} {
			set host_1 $expect_out(2,string)
		}
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		kill_srun
		set exit_code 1
		exp_continue
	}
	eof {
		wait
	}
}

#
# Verify node count
#
if {[string compare $host_0 ""] == 0} {
	send_user "\nFAILURE: Did not get hostname of task 0\n"
	set exit_code   1	
}
if {[string compare $host_1 ""] != 0} {
	send_user "\nFAILURE: Started two tasks instead of one\n"
}
if {[test_front_end] != 0} {
	send_user "\nWARNING: Additional testing is incompatable with front-end systems\n"
	exit $exit_code
}

#
# Submit a 1 to 3 node job
#
set host_0      ""
set host_1      ""
set host_2      ""
set host_3      ""
set timeout $max_job_delay
if {$have_arg == 0} {
	spawn $srun -N1-3 -l -t1 $bin_hostname
} else {
	spawn $srun -N1-3 -l -t1 $bin_hostname $hostname_arg 
}
expect {
	-re "($number): ($alpha_numeric)" {
		if {$expect_out(1,string) == 0} {
			set host_0 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 1} {
			set host_1 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 2} {
			set host_2 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 3} {
			set host_3 $expect_out(2,string)
		}
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		kill_srun
		set exit_code 1
		exp_continue
	}
	eof {
		wait
	}
}

#
# Verify node count
#
if {[string compare $host_0 ""] == 0} {
	send_user "\nFAILURE: Did not get hostname of task 0\n"
	set exit_code   1	
}
if {[string compare $host_3 ""] != 0} {
	send_user "\nFAILURE: Started more than three tasks\n"
	set exit_code   1	
}
set dup_hostname 0
if {[string compare $host_0 $host_1] == 0} {
	set dup_hostname 1	
}
if {[string compare $host_0 $host_2] == 0} {
	set dup_hostname 1	
}
if {[string compare $host_0 $host_3] == 0} {
	set dup_hostname 1	
}
if {$dup_hostname == 1} {
	send_user "\nFAILURE: Re-used a node in the allocation\n"
	set exit_code   1	
}

#
# Submit a 2 to 3 node job
#
set host_0      ""
set host_1      ""
set host_2      ""
set host_3      ""
set timeout $max_job_delay
if {$have_arg == 0} {
	spawn $srun -N2-3 -l -t1 $bin_hostname
} else {
	spawn $srun -N2-3 -l -t1 $bin_hostname $hostname_arg   
}
expect {
	-re "More ($alpha) requested than permitted" {
		send_user "\nWARNING: can't test srun task distribution\n"
		exit $exit_code
	}
	-re "($number): ($alpha_numeric)" {
		if {$expect_out(1,string) == 0} {
			set host_0 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 1} {
			set host_1 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 2} {
			set host_2 $expect_out(2,string)
		}
		if {$expect_out(1,string) == 3} {
			set host_3 $expect_out(1,string)
		}
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		kill_srun
		set exit_code 1
		exp_continue
	}
	eof {
		wait
	}
}

#
# Verify node count
#
if {[string compare $host_0 ""] == 0} {
	send_user "\nFAILURE: Did not get hostname of task 0\n"
	set exit_code   1	
}
if {[string compare $host_1 ""] == 0} {
	send_user "\nFAILURE: Did not get hostname of task 1\n"
	set exit_code   1	
}
if {[string compare $host_3 ""] != 0} {
	send_user "\nFAILURE: Started more than three tasks\n"
	set exit_code   1	
}
set dup_hostname 0
if {[string compare $host_0 $host_1] == 0} {
	set dup_hostname 1	
}
if {[string compare $host_0 $host_2] == 0} {
	set dup_hostname 1	
}
if {[string compare $host_0 $host_3] == 0} {
	set dup_hostname 1	
}
if {$dup_hostname == 1} {
	send_user "\nFAILURE: Re-used a node in the allocation\n"
	set exit_code   1	
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
