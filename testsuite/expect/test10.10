############################################################################
source ./globals

set test_id       "10.10"
set exit_code     0
set matches       0
set stuff ""
print_header $test_id

#
# Check the the --noheader option in smap
# in curses format.
#
 
spawn $smap --noheader
expect {
	-re "ID J" {
	set stuff [concat $stuff "1"]
		incr matches
		exp_continue
	}
	-re "OBID" {
	set stuff [concat $stuff "2"]
		incr matches
		exp_continue
	}
	-re "PARTITION" {
	set stuff [concat $stuff "3"]
		incr matches
		exp_continue
	}
	-re "BGL_BLOCK" {
	set stuff [concat $stuff "4"]
		incr matches
		exp_continue
	}
	-re "USER" {
	set stuff [concat $stuff "5"]
		incr matches
		exp_continue
	}
	-re "NAME" {
	set stuff [concat $stuff "6"]
		incr matches
		exp_continue
	}
	-re "ST " {
	set stuff [concat $stuff "7"]
		incr matches
		exp_continue
	}
	-re "TIME" {
	set stuff [concat $stuff "8"]
		incr matches
		exp_continue
	}
	-re "NODES" {
	set stuff [concat $stuff "9"]
		incr matches
		exp_continue
	}
	-re "NODELIST" {
	set stuff [concat $stuff "10"]
		incr matches
		exp_continue	        
	}
	-re "\n" {
		send "q"
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: smap not responding\n"
		set exit_code 1
	}
	eof {
		wait
      	}
}

if {$matches != 0} {
	send_user $stuff
	send_user "\nFAILURE: smap --noheader produces header\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
