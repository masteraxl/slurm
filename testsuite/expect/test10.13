############################################################################
source ./globals

set test_id       "10.13"
set exit_code     0
set matches       0
set non_bgl       0
set prompt        ".*$"
set created       0
set file          "bluegene-test.conf"
set stuff         ""
set too_small     0

print_header $test_id
#
# Check the smap creation of bluegene.conf file
# in curses format.
#

spawn $smap -Dc
expect {
	-re "Screen is too small" {
		set too_small 1
		exp_continue
	}
	-re "BGL SYSTEM" {
		set non_bgl 1
		exp_continue	
	}	
	-re "TORUS" {
		set created 1
		exp_continue
	}
	-re "to exit" {
		if { $matches == 0 } {
			send "create 1\n"
		} elseif { $matches == 1 } {
			send "save $file\n"
		} elseif { $matches == 2 } {
			send "exit\n"
		}
		incr matches
		exp_continue
	}	
	
	timeout {
		send_user "\nFAILURE: smap not responding\n"
		set created 1
		set exit_code 1
	}
	eof {
		wait
      	}
}


if {$too_small != 0} {
	send_user "\nWARNING: Screen is too small for test\n"
	exit 0
}
if {$non_bgl != 0} {
	send_user "\nWARNING: Must be on a BGL SYSTEM to run this command\n"
	exit 0
}
if {$created != 1} {
	send_user "\nFAILURE: smap was unable to create partition\n"
	set exit_code 1
}

set matches       0
if { $exit_code != 1 } {
	spawn more $file
	expect {
		-re "BlrtsImage" {
			set stuff [concat $stuff "1"]
			incr matches
			exp_continue
		}
		-re "LinuxImage" {
			set stuff [concat $stuff "2"]
			incr matches
			exp_continue
		}
		-re "MloaderImage" {
			set stuff [concat $stuff "3"]
			incr matches
			exp_continue
		}
		-re "RamDiskImage" {
			set stuff [concat $stuff "4"]
			incr matches
			exp_continue
		}
		-re "BridgeAPILogFile" {
			set stuff [concat $stuff "5"]
			incr matches
			exp_continue
		}
		-re "Numpsets" {
			set stuff [concat $stuff "6"]
			incr matches
			exp_continue
		}
		-re "BridgeAPIVerbose" {
			set stuff [concat $stuff "7"]
			incr matches
			exp_continue
		}
		-re "Nodes" {
			set stuff [concat $stuff "8"]
			incr matches
			exp_continue
		}
		eof {
			wait
		}
	}

	if {$matches != 8} {
		send_user "$matches\n$stuff"
		send_user "\nFAILURE: smap bluegene.conf file was created but corrupt\n"
		set exit_code 1
	}

}
exec rm -f $file	
if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
